<div class='container'>
	<h1><%= user.name %> </h1>
	<% if (user.admin) { %>
		<img src="/images/admin.png"> admin
	<% } else { %>
		<img src="/images/pawn.png"> pawn
	<% } %>
	<h3><%= user.title %> </h3>
	<hr>
	<h3>contact: <%= user.email %> </h3>
	
	<% if ((session.User.id === user.id) || (session.authenticated && session.User.admin)) { %>
	   <a class="btn btn-medium btn-primary" href="/user/edit/<%= user.id %>">Edit</a>
	<% } %>
	<% if (session.User.id !== user.id) { %>
	   <a class="btn btn-medium btn-primary" href="/message/new/<%= user.id %>">Message</a>
	<% } %>
</div>